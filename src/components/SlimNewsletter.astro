---
import NewsletterImage from "/public/suzza-fav-icon.png";
import { Image } from "astro:assets";
---

<div id="newsletter" class="flex flex-col lg:flex-row margin-y-xxl">
  <div id="newsletter-img">
    <Image
      src={NewsletterImage}
      alt="A blooming stargazer lilly"
      width={500}
      height={800}
      class="h-full w-full"
    />
  </div>
  <div
    id="newsletter-signup"
    class="flex flex-col padding-y-med bg-white-50 border-black border"
  >
    <div
      id="newsletter-text"
      class="padding-x-small padding-bottom-xxl text-balance text-center"
    >
      <p class="poppins">
        Join a Growing Community of Writers Who Want More Traffic To Their Blogs
        by Subscribing Today.
      </p>
    </div>
    <div id="newsletter-form" class="flex justify-center">
      <iframe
        src="https://embeds.beehiiv.com/9a249792-c593-446f-9054-76b1c92f7336?slim=true"
        data-test-id="beehiiv-embed"
        height="52"
        frameborder="0"
        scrolling="no"
        style="margin: 0; border-radius: 0px !important; background-color: transparent;"
        class="w-full padding-x-med"></iframe>
    </div>
  </div>
</div>
